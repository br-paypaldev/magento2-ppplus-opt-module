<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">

    <group id="creditcard" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Credit Card</label>

        <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enable payment method</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/paypalplus_brasil_creditcard/active</config_path>
        </field>

        <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Payment method title</label>
            <config_path>payment/paypalplus_brasil_creditcard/title</config_path>
        </field>

        <field id="enable_installments" translate="label comment" sortOrder="30" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enable Installments</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/paypalplus_brasil_creditcard/enable_installments</config_path>
        </field>

        <field id="enable_save_credit_card" translate="label" type="select" sortOrder="45" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enable save credit card</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/paypalplus_brasil_creditcard/enable_save_credit_card</config_path>
        </field>

        <field id="iframe_height" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Iframe Height</label>
            <validate>integer</validate>
            <config_path>payment/paypalplus_brasil_creditcard/iframe_height</config_path>
            <comment>Credit Card Form Iframe Height in Pixels</comment>
        </field>

        <field id="sort_order" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Sort Order</label>
            <frontend_class>validate-number</frontend_class>
            <config_path>payment/paypalplus_brasil_creditcard/sort_order</config_path>
        </field>
    </group>
</include>
